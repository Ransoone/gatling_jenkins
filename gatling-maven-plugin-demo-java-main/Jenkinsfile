pipeline {
    agent any
    stages {
        stage("Maven build") {
            steps {
            script{
                sh 'mvn -B clean package'
                }
            }
        }
        stage("Gatling run") {
            steps {
            script{
                sh 'mvn -Dramp_stepOne=$ramp_stepOne -Dramp_stepTwo=$ramp_stepTwo -Dduring_stepOne=$during_stepOne -Dduring_stepTwo=$during_stepTwo -DstepOne=$stepOne -DstepTwo=$stepTwo gatling:test'
            }
           }
            post {
                always {
                    gatlingArchive()
                }
            }
        }
    }
}